<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox  spacing="120" xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.htlleonding.mill.controller.HomeController"
        stylesheets="/style.css">

    <Button fx:id="logoutBtn" onAction="#onBtnLogout">Logout</Button>

    <VBox styleClass="fill-page" alignment="CENTER" spacing="20">
        <Label styleClass="header" alignment="CENTER">Mill - Home</Label>

        <HBox alignment="CENTER" spacing="100.0">
            <VBox alignment="CENTER" spacing="20">
                <Label alignment="CENTER">Your matches</Label>
                <ListView fx:id="gamesLv" onMouseClicked="#onClickGamesLv"/>
            </VBox>

            <VBox alignment="CENTER" spacing="20" prefHeight="200" minHeight="200" maxHeight="200" prefWidth="100" minWidth="100" maxWidth="100">
                <Label alignment="TOP_CENTER" fx:id="aliasLabel"/>
                <Button alignment="CENTER" fx:id="playButton" onAction="#onBtnPlay">Play</Button>
                <Button alignment="CENTER" fx:id="botBtn">Bot</Button>
                <Button alignment="CENTER" fx:id="replayBtn">Replay</Button>
            </VBox>

            <VBox alignment="CENTER" spacing="20">
                <Label alignment="CENTER">Leaderboard</Label>
                <ListView fx:id="leaderboardLv"/>
            </VBox>
        </HBox>
    </VBox>
</VBox>